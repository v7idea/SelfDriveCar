<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10px">

    <Button
        android:id="@+id/ReviewRecordDataActivity_Button_deleteFile"
        android:layout_width="100px"
        android:layout_height="75px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="35px"
        android:focusable="false"
        android:text="刪除"/>

    <Button
        android:id="@+id/ReviewRecordDataActivity_Button_viewFile"
        android:layout_width="100px"
        android:layout_height="75px"
        android:layout_toLeftOf="@+id/ReviewRecordDataActivity_Button_deleteFile"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:textSize="35px"
        android:text="查看"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/ReviewRecordDataActivity_Button_viewFile"
        android:layout_marginRight="10px">

        <TextView
            android:id="@+id/FileNameItemLayout_TextView_ShowFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/FileNameItemLayout_TextView_RecordDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:textColor="@android:color/black"/>

    </LinearLayout>

</RelativeLayout>