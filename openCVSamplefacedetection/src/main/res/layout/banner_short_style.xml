<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.v7idea.template.View.SpecialImageView
        android:id="@+id/bannerShort_SpecialImageView_bannerBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/bannerShort_LinearLayout_textContainer"
        android:layout_alignLeft="@+id/bannerShort_TextView_touchArea"
        android:layout_alignRight="@+id/bannerShort_LinearLayout_textContainer"
        android:layout_alignBottom="@+id/bannerShort_LinearLayout_textContainer"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@android:color/white"/>

    <LinearLayout
        android:id="@+id/bannerShort_LinearLayout_textContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:gravity="center">

        <com.v7idea.template.View.V7TitleView
            android:id="@+id/bannerShort_TextView_headerText"
            android:layout_width="260px"
            android:layout_height="80px"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="32px"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bannerShort_LinearLayout_InternetStatusBar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bannerShort_LinearLayout_textContainer"
        android:layout_centerHorizontal="true">

        <com.v7idea.template.View.BannerUserBar
            android:id="@+id/bannerShort_BannerUserBar_ShowInternetStatus"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:visibility="gone"/>

    </LinearLayout>

