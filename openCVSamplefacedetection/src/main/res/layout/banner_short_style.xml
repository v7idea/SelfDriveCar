    <com.v7idea.template.View.SpecialImageView
        android:id="@+id/bannerShort_SpecialImageView_backIcon"
        android:layout_width="24px"
        android:layout_height="39px"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30px"
        android:layout_marginTop="25px"
        android:scaleType="fitXY"
        android:src="@mipmap/arrow_pre"/>

    <TextView
        android:id="@+id/bannerShort_TextView_touchArea"
        android:layout_width="151px"
        android:layout_height="88px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="45px" />

    <com.v7idea.template.View.V7TitleView
        android:id="@+id/bannerShort_V7TitleView_ShowText"
        android:layout_width="wrap_content"
        android:layout_height="88px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30px"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:textSize="30px" />

    <RelativeLayout
        android:id="@+id/bannerShort_RelativeLayout_IconContainer"
        android:layout_width="wrap_content"
        android:layout_height="88px"
        android:layout_marginRight="30px"
        android:layout_alignBottom="@+id/bannerShort_LinearLayout_InternetStatusBar"
        android:layout_alignParentStart="true">

        <com.v7idea.template.View.SpecialImageView
            android:id="@+id/bannerShort_SpecialImageView_Icon"
            android:layout_width="30px"
            android:layout_height="38px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY" />

        <com.v7idea.template.View.SpecialImageView
            android:id="@+id/bannerShort_SpecialImageView_QrIcon"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/bannerShort_SpecialImageView_Icon"
            android:layout_marginRight="20px"
            android:scaleType="fitXY" />

    </RelativeLayout>

</RelativeLayout>