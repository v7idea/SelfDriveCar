<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"
            android:layout_height="wrap_content">

            <stroke
                android:width="2dp"
                android:color="#FFA9A9A9" />

            <corners
                android:radius="40dp"/>

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:top="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
            <corners
                android:radius="40dp"/>
        </shape>
    </item>
</layer-list>